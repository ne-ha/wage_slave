#!/usr/bin/env ruby

require "bundler/setup"
require "wage_slave"
require 'dotenv'

Dotenv.load

# Configure Application with Demo API Keys
WageSlave.configure do | config |
  config.financial_institution = "ANZ"
  config.bank_code 						 = "123-456"
  config.user_id							 = "000001"
  config.description					 = "No Yelling Commission"
  config.user_name						 = "No Yelling"
  config.xero = { 
    consumer_key: ENV['DEMO_XERO_CONSUMER_KEY'],
    consumer_secret: ENV['DEMO_XERO_CONSUMER_SECRET'],
    pem_file_location: File.expand_path("../../", __FILE__) + ENV['XERO_PEM_FILE_LOCATION']
  }
end

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

require "irb"
IRB.start
